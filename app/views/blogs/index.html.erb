<h1>ブログ一覧</h1>
<div class = container>
<p><%= notice %></p>
<div class = row>
<table>
    <tr>
        <th>タイトル</th>
        <th>内容</th>
    </tr>
    <% @blogs.each do |blog| %>
    <div class="col-xs-12 col-md-6 blog-panel">
    <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to '詳細画面を確認する', blog_path(blog.id), class: 'btn btn-default' %></td>
        <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id), class: 'btn btn-info'%></td>
        <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-success' %></td>

    </tr>
    </div>
<% end %>
</table>
</div class = submit>
<%= link_to '新しくブログを投稿する', new_blog_path, class: 'btn btn-default' %>
</div>